{
  "name": "flashloaner",
  "version": "0.1.0",
  "description": "Off-chain arbitrage bot for flashloan execution",
  "type": "module",
  "main": "dist/src/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node --import tsx bot/src/index.ts",
    "start:dry-run": "DRY_RUN=true node --import tsx bot/src/index.ts",
    "start:testnet": "node --import tsx bot/src/run-testnet.ts",
    "bot:arb-sepolia": "node --import tsx bot/src/run-arb-sepolia.ts",
    "bot:arb-mainnet": "node --import tsx bot/src/run-arb-mainnet.ts",
    "dev": "LOG_LEVEL=debug node --import tsx bot/src/index.ts",
    "test": "vitest run",
    "test:watch": "vitest",
    "typecheck": "tsc --noEmit",
    "preflight": "pnpm run typecheck && pnpm run test && gitleaks detect --source . --no-git",
    "// PM2 Process Management": "Install pm2 globally: npm i -g pm2. For log rotation: pm2 install pm2-logrotate && pm2 set pm2-logrotate:max_size 10M && pm2 set pm2-logrotate:retain 7",
    "pm2:start": "pm2 start ecosystem.config.cjs",
    "pm2:stop": "pm2 stop flashloaner-arb",
    "pm2:restart": "pm2 restart flashloaner-arb",
    "pm2:logs": "pm2 logs flashloaner-arb --lines 100",
    "pm2:status": "pm2 status",
    "pm2:monit": "pm2 monit",
    "pm2:delete": "pm2 delete flashloaner-arb",
    "report": "tsx bot/src/dashboard/report-cli.ts",
    "report:last": "tsx bot/src/dashboard/report-cli.ts --last"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "dotenv": "^17.3.1",
    "ethers": "^6"
  },
  "devDependencies": {
    "@types/node": "^25.2.3",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  },
  "packageManager": "pnpm@9.15.4+sha512.b2dc20e2fc72b3e18848459b37359a32064663e5627a51e4c74b2c29dd8e8e0491483c3abb40789cfd578bf362fb6ba8261b05f0387d76792ed6e23ea3b1b6a0"
}
